<div class="topicTitle">

  <a href="/topics/{{topic.id}}" style="float:left;">
    <img src="{{topic.img_url}}" width="100" height="100">
  </a>  
  <h3 class="t-title" style="float:left; width:200px">
    {{topic.title}}
  </h3>

  </div>
</div>

  <br>
  <br>
  <br>

    {{#each posts}}
      <div class="postsTopic">
        <a href="/users/{{user_id}}" class="username">{{username}}</a>
        <img src="{{img_url}}" width="200" height="200">
        <p class="textInPost description">{{description}}</p>
        <p class="textInPost">{{date_made}}</p>
     </div>
     <br>
     <br>
    {{/each}}

  <br>  

  <a href="/posts/{{topic.id}}/new/" class="addPost">
    add a post
  </a>

  <br>
</div>